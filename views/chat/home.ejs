<script src="socket.io/socket.io.js"></script>
<script>
    document.getElementById("bottom").scrollIntoView();
    var chat_form = document.getElementById("chat_form");
    var chat_message = document.getElementById("message");
    var username = document.getElementById("username");
    var listPublicMessages = document.getElementById("area-list-messages");
    var list_online_users = document.getElementById("list_online_users");
    var total_users = document.getElementById("total_users");
    var roomName = document.getElementById("roomName");
    var roomList = document.getElementById("roomList");
    var totalinvitation = document.getElementsByClassName('totalinvitation');
    var invitationlist = document.getElementById('invitationlist');
    // let emoji = $("#message").emojioneArea(); // phai dung jquery
    // var socket = io.connect('http://zendvnexpress.noteatext.com');
    var socket = io.connect('localhost:3000');
    let thisUser = "<%= userInfo.username %>";
    let thisUserID = "<%= userInfo._id %>";
    // reject invitation
    var rejectfriend = (element) => {
        var data = {};
        data.senderID = element.dataset.id;
        data.receiverID = thisUserID;
        socket.emit("reject_invitation", data);
        element.parentNode.parentNode.remove(); //remove the node chừa invitation này
        // xóa số lượng invitation hiển thị
        for (i = 0; i < totalinvitation.length; i++) {
            totalinvitation[i].innerHTML = parseInt(totalinvitation[i].innerHTML) - 1;
        }
    };
    // accept invitation
    var acceptfriend = (element) => {
        var data = {};
        data.senderID = element.dataset.id;
        data.receiverID = thisUserID;
        socket.emit("accept_invitation", data);
        element.parentNode.parentNode.remove(); //remove the node chừa invitation này
        // xóa số lượng invitation hiển thị
        for (i = 0; i < totalinvitation.length; i++) {
            totalinvitation[i].innerHTML = parseInt(totalinvitation[i].innerHTML) - 1;
        }
    };
    // receive invitaion
    socket.on("server_send_invitation", (data) => {
        // console.log(totalinvitation.length);

        for (i = 0; i < totalinvitation.length; i++) {
            totalinvitation[i].innerHTML = parseInt(totalinvitation[i].innerHTML) + 1;
        }
        var html = `
                <div class="user-invite">
                    <div class="col-md-7 user-avatar">
                        <img class="contacts-list-img" src="chat/img/user1-128x128.jpg" alt="User Image">
                        <h5>
                            ${data[0].username}
                        </h5>
                    </div>
                    <div class="col-md-5 btn-action-invite">
                        <button type="button" class="btn btn-block btn-primary" data-id="${data[0]._id}" onclick="acceptfriend(this)">Accept</button>
                        <button type="button" class="btn btn-block btn-default" data-id="${data[0]._id}" onclick="rejectfriend(this)">Reject</button>
                    </div>
                </div>
                `;
        invitationlist.innerHTML += html;
    });
    // server send public message
    socket.on("server_return_public_message", (data) => { //nhận tin nhắn từ server gửi tới tất cả user ở public
        let right = '';
        let direct_chat_name = 'pull-left';
        let direct_chat_timestamp = 'pull-right';

        if (thisUser === data.username) {
            right = 'right';
            direct_chat_name = 'pull-right';
            direct_chat_timestamp = 'pull-left';
        }
        var html = `
        <div class="direct-chat-msg ${right}">
            <div class="direct-chat-info clearfix">
                <span class="direct-chat-name ${direct_chat_name}">${data.username}</span>
                <span class="direct-chat-timestamp ${direct_chat_timestamp}">${data.time}</span>
            </div>

            <img class="direct-chat-img" src="chat/img/user1-128x128.jpg" alt="Message User Image">

            <div class="direct-chat-text">
                ${data.content}
            </div>

        </div>`;

        listPublicMessages.innerHTML += html;
        document.getElementById("bottom").scrollIntoView();
    });
    // end server send public message
    // nhận list online users
    socket.on("online_users", (data) => {
        var html = "";
        // console.log(data);
        data.allUsers.forEach(user => {
            var online = '<p>offline</p>';
            if (user.username !== thisUser) {
                var socketid = '';
                //filter giúp tìm trong mảng data.onlineUsers có phần tử thỏa mãn điều kiện onlineUser.username === user.username. Kết quả trả về mảng chứa các phẩn tử thỏa mãn điều kiện
                var existenceOnline = data.onlineUsers.filter((onlineUser) => onlineUser.username === user.username)
                if (existenceOnline.length > 0) {
                    online = "<p style='color: red;'>online</p>";
                    socketid = existenceOnline[0].id;
                };
                html += `<div class="user">
                        <div class="col-md-8 user-avatar">
                            <img class="contacts-list-img" src="chat/img/user1-128x128.jpg" alt="${user.username}">
                            <h5>${user.username}</h5>
                            ${online}
                        </div>
                        <div class="col-md-4"><button type="button" data-idsendinvitation="${thisUserID}" data-usersendinvitation="${thisUser}" data-receiveid="${user._id}" data-receivesocketid="${socketid}" data-receiveusername="${user.username}" class="btn btn-block btn-primary btn-w btn-sm" onclick="addfriend(this)">Add friend</button></div>
                    </div>`;
            };

        });
        list_online_users.innerHTML = html;
        total_users.innerHTML = data.onlineUsers.length - 1;
    });
    // online
    socket.emit("new_online_user", { // gửi user mới online
        username: thisUser,
        _id: thisUserID
    });
    // end online

    // socket.on('server_send_user_typing',(data)=>{// nhận tín hiệu 1 ai đó sang gõ phím

    // })
    // create room
    socket.on('server_return_rooms', (data) => {
        // console.log(data);
        var html =
            `<div class="room">
                <a target="_self" href="<%= systemConfig.prefixChat %>/room/${data._id}">
                    <div class="col-md-8 room-avatar">
                        <img class="rooms-list-img" src="chat/img/Angular.png" alt="User Image">
                        <h5 class="room-name">${data.roomName}</h5>
                        <small>Member: ${data.members.length}</small>
                        <p>Created by: ${data.createdBy}</p>
                    </div>
                </a>

            </div>
        `;
        roomList.innerHTML += html;
    });
    roomName.addEventListener("keyup", (event) => {

        if (event.keyCode === 13) {

            event.preventDefault();

            socket.emit("create_room", {
                roomName: roomName.value,
                createdBy: thisUser,
                members: [thisUser],
            });
            roomName.value = '';
        }
    });

    // end create room
    function send_message() {
        var content = chat_message.value;
        content = emoji(content);
        // console.log(content);
        socket.emit('client_send_public_message', { //gửi tin nhắn lên server để server gửi tin nhắn tới tất cả user ở public
            content: content,
            username: username.value,
        });
        //remove text after send
        chat_message.value = '';

        // remove emoji
        // emoji.data("emojioneArea").setText('');
    };
    // chat_form.addEventListener('submit', (e) => {
    //     // e.preventDefault();
    //     socket.emit('client_send_all_message', {
    //         content: chat_message.value,
    //         username: username.value
    //     });
    //     chat_message.value = '';
    //     return false;
    // });
    // addfriend
    var addfriend = (element) => {
        var data = {};
        data.receiveUserID = element.dataset.receiveid;
        data.receiveUserSocketID = element.dataset.receivesocketid;
        data.receiveUsername = element.dataset.receiveusername;
        data.userSendInvitation = element.dataset.usersendinvitation;
        data.idSendInvitation = element.dataset.idsendinvitation;
        socket.emit('send_addfriend', data);
    };
</script>