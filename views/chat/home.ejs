                <li><a href="#">Layout</a></li>
                <li class="active">Top Navigation</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="col-md-8 no-padding-left">
                <div class="box box-primary direct-chat direct-chat-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Direct Chat</h3>


                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <!-- Conversations are loaded here -->
                        <div class="direct-chat-messages">
                            <div id="area-list-messages">
                                <!-- Message. Default to the left -->
                                <% publicMessages.forEach(publicMessage=> { %>
                                    <% let right='' ; let direct_chat_name='pull-left' ; let
                                        direct_chat_timestamp='pull-right' ; if
                                        (publicMessage.username==userInfo.username) { right='right' ;
                                        direct_chat_name='pull-right' ; direct_chat_timestamp='pull-left' ; } %>
                                        <div class="direct-chat-msg <%= right %> ">
                                            <div class="direct-chat-info clearfix">
                                                <span class="direct-chat-name <%= direct_chat_name %>">
                                                    <%= publicMessage.username %>
                                                </span>
                                                <span class="direct-chat-timestamp <%= direct_chat_timestamp %>">
                                                    <%= publicMessage.time %>
                                                </span>
                                            </div>
                                            <!-- /.direct-chat-info -->
                                            <img class="direct-chat-img" src="chat/img/user1-128x128.jpg" alt="Message User Image">
                                            <!-- /.direct-chat-img -->
                                            <div class="direct-chat-text">
                                                <%- publicMessage.content %>

                                            </div>
                                            <!-- /.direct-chat-text -->
                                        </div>
                                        <% }); %>
                                            <!-- /.direct-chat-msg -->



                                            <!-- /.direct-chat-msg -->
                            </div>
                            <div id="bottom"></div>
                        </div>
                        <!--/.direct-chat-messages-->

                        <!-- Contacts are loaded here -->
                        <div class="direct-chat-contacts">
