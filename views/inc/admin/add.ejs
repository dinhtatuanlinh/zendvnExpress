<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Form
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <% if(validatorErr !== undefined){ %> 
                        <div class="alert alert-danger" role="alert">
                            <ul>
                                <% validatorErr.forEach((err) => { %>
                                    <li><%= err.param %> : <%= err.msg %></li>
                                <% }) %> 
                            </ul>
                        </div>
                        <% } %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <form target="_self" role="form" action="<%= systemConfig.prefixAdmin %>/add/save" method="POST">
                            <div class="form-group">
                                <label>Name</label>
                                
                            </div>
                            <div class="form-group">
                                <label>Status</label>
                                <select name="status" class="form-control">
                                    <option value="novalue">Choose Status</option>
                                   
                                </select>
                            </div>
                            <!-- <div class="form-group">
                                <label>Content</label>
                                <textarea class="form-control" name="content" rows="2"  id="content_ck" ></textarea>
                                </div> -->
                            
                            <button type="submit" class="btn btn-primary">Submit </button>
                            <a type="button" href="admin123/item/" class="btn btn-default">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>